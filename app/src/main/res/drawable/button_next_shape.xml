<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="14dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="14dp"
                />
            <gradient
                android:angle="315"
                android:centerX="75%"
                android:centerColor="#4AA856"
                android:startColor="#B1FF9E"
                android:endColor="#000000"
                android:type="linear"
                />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />
            <size
                android:width="100dp"
                android:height="50dp"
                />
            <stroke
                android:width="2dp"
                android:color="#ff8fe7f5"
                />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="14dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="14dp"
                />
            <gradient
                android:angle="315"
                android:centerX="35%"
                android:centerColor="#4AA856"
                android:startColor="#B1FF9E"
                android:endColor="#000000"
                android:type="linear"
                />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />
            <size
                android:width="100dp"
                android:height="50dp"
                />
            <stroke
                android:width="2dp"
                android:color="#325257"
                />
        </shape>
    </item>
</selector>